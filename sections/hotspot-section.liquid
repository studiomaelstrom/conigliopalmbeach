{% schema %}
{
  "name": "mod-hotspot Image",
  "settings": [
    {
      "type": "text",
      "id": "image",
      "label": "Image URL"
    },
    {
      "type": "color",
      "id": "mod-hotspot_color",
      "label": "mod-hotspot Color",
      "default": "#F47722"
    },
    {
      "type": "color",
      "id": "mod-hotspot_inner",
      "label": "mod-hotspot Inner Color",
      "default": "#FFF"
    },
    {
      "type": "text",
      "id": "bg",
      "label": "Background Image URL (Optional)"
    },
    {
      "type": "range",
      "id": "margins",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Margins",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "mod-hotspot",
      "name": "mod-hotspot",
      "settings": [
        {
      "type": "product",
      "id": "product",
      "label": "Select a product",
      "info": "Choose a product to display in this section."
    },
        {
          "type": "range",
          "id": "top",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Top",
          "default": 50
        },
        {
          "type": "range",
          "id": "left",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Left",
          "default": 50
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with mod-hotspots",
      "category": "Image with mod-hotspots"
    }
  ]
}
{% endschema %}

{%- style -%}
                  .section-{{ section.id }}-padding {
                    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
                    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
                  }

                  @media screen and (min-width: 750px) {
                    .section-{{ section.id }}-padding {
                      padding-top: {{ section.settings.padding_top }}px;
                      padding-bottom: {{ section.settings.padding_bottom }}px;
                    }
                  }

                  .mod-hotspots--wrapper {
                    position: relative;
                    margin: auto;
                  }

                  .mod-hotspots--figure {
                    width: 100%;
                  }

                  .mod-hotspot {
                    position: absolute;
                    display: block;
                  }

                  .mod-hotspot--cta {
                    position: relative;
                    float: right;
                    display: inline-block;
                    width: 30px;
                    height: 30px;
                    border-radius: 50%;
                    background: {{section.settings.mod-hotspot_color}};
                    transition: all cubic-bezier(0.8, 0, 0.2, 1) 0.4s;
                  }

                  .mod-hotspot--cta::after {
                    content: "";
                    position: absolute;
                    left: 0;
                    top: 0;
                    bottom: 0;
                    right: 0;
                    margin: auto;
                    width: 10px;
                    height: 10px;
                    border-radius: 50%;
                    background: {{section.settings.mod-hotspot_inner}};
                    z-index: 2;
                    transition: opacity 0.6s;
                    animation: pulse 1.5s cubic-bezier(0.8, 0, 0.2, 1) 0s infinite;
                  }

                  .mod-hotspot:hover .mod-hotspot--cta {
                    transform: scale(0.6);
                  }

                  .mod-hotspot:hover .mod-hotspot--cta:after {
                    opacity: 0;
                  }

                  @keyframes pulse {
                    0% {
                      transform: scale(0.4);
                    }
                    33% {
                      transform: scale(1);
                    }
                    66% {
                      transform: scale(0.4);
                    }
                    100% {
                      transform: scale(0.4);
                    }
                  }

                  @media screen and (max-width: 420px) {
                    .mod-hotspot--cta {
                      width: 20px;
                      height: 20px;
                    }
                    .mod-hotspot--cta::after {
                      width: 5px;
                      height: 5px;
                    }
                  }

                    {%- for block in section.blocks -%}
                      {%- assign mod-hotspot_position = '#mod-hotspot-' | append: block.id -%}
                      {{ mod-hotspot_position }}{
                        top: {{ block.settings.top }}%;
                        left: {{ block.settings.left }}%;
                      }

                {%- assign info_position = '#info-' | append: block.id -%}
                      {{ info_position }}{
                        top: {{ block.settings.itop }}%;
                        left: {{ block.settings.ileft }}%;
                      }
                    {%- endfor -%}

                .mod-hotspot-background {
                  flex: 0 0 auto;
                  width: 95%;
                  display: flex;
                  align-self: center;
                  align-items: center;
                  margin-left:auto;
                  margin-right:auto;
                  flex-direction: column;
                  justify-content: center;
                }


            .mod-hotspot--popup {
            display: none;
            position: absolute;
            background-color: white;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.5);
            z-index: 10;
            width:400px;
            margin-bottom:100px!important;
            /* Adjust width, max-width, etc., as needed */
          }

          @keyframes fadeIn {
          from {
            opacity: 0;
          }
          to {
            opacity: 1;
          }
        }

        .fade-in {
          animation: fadeIn 0.5s ease-out forwards;
        }

        /* Centered Popup Modal */
      .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 100; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.5s, visibility 0.5s; /* Smooth transition for opacity and visibility */
  }
    /* Fade class to add when showing the modal */
  .fade-in {
    opacity: 1;
    visibility: visible;
  }

      /* Modal Content */
      .modal-content {
        background-color: #fefefe;
        margin: 15% auto; /* 15% from the top and centered */
        padding: 20px;
        border: 1px solid #888;
        width: 80%; /* Could be more or less, depending on screen size */
        max-width: 600px; /* Maximum width */
      }

      /* The Close Button */
      .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
      }

      .close:hover,
      .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
      }

      /* Modal Content Styles */
    .modal-content img {
      width: 100%; /* Make the image fill the modal's width */
      height: auto; /* Maintain aspect ratio */
      border-radius: 4px; /* Optional: Adds rounded corners to the image */
    }

    .modal-content h3,
    .modal-content a {
      text-align: center; /* Center-align text */
      display: block; /* Make the link take its own line */
      margin-top: 20px; /* Add some space above the title and link */
    }

    /* Outline Button Styles */
    .modal-content a {
      padding: 10px 20px;
      border: 2px solid #F47722; /* Use your theme's primary color or any color you prefer */
      border-radius: 4px; /* Rounded corners for the button */
      color: #F47722; /* Text color */
      text-decoration: none; /* Remove underline from the link */
      font-weight: bold; /* Optional: Makes the text bold */
      transition: background-color 0.3s, color 0.3s; /* Smooth transition for hover effect */
    }

    .modal-content a:hover {
      background-color: #F47722; /* Button fill color on hover */
      color: #FFFFFF; /* Text color on hover */
    }
{%- endstyle -%}
<div
  class="mod-hotspot-background"
  style="
    margin-top: {{ section.settings.margins }}px;
    margin-bottom: {{ section.settings.margins }}px;
    {% if section.settings.bg != blank %}
     background-size: cover;
    background-image: url('{{ section.settings.bg }}');
    {% else %}
      background-image: none;
    {% endif %}
  "
>
  <div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
    <div class="page-width">
      <section class="mod-hotspots--wrapper">
        <img
          src="{{ section.settings.image }}"
          alt=""
          class="mod-hotspots--figure"
        >

        <!-- The Modal -->
        <div id="myModal" class="modal">
          <!-- Modal content -->
          <div class="modal-content">
            <!-- Dynamic content will be loaded here -->
          </div>
        </div>

        <!-- mod-hotspot Trigger -->
        {%- for block in section.blocks -%}
          <div
            class="mod-hotspot"
            id="mod-hotspot-{{ block.id }}"
            style="top: {{ block.settings.top }}%; left: {{ block.settings.left }}%;"
          >
            <span class="mod-hotspot--cta"></span>
            <!-- Hidden Product Info Container -->
            <div class="mod-hotspot--product-info" style="display: none;">
              {% assign product = all_products[block.settings.product] %}
              <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}">
              <h3>{{ product.title }}</h3>
              <a href="{{ product.url }}" class="outline-button">View Product</a>
            </div>
          </div>
        {%- endfor -%}
      </section>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
    const mod-hotspots = document.querySelectorAll('.mod-hotspot');
    const modal = document.querySelector('.modal');

    mod-hotspots.forEach(mod-hotspot => {
      mod-hotspot.addEventListener('click', function() {
        const productInfo = this.querySelector('.mod-hotspot--product-info').innerHTML;
        modal.querySelector('.modal-content').innerHTML = productInfo; // Insert product info into modal
        modal.style.display = "block"; // Show the modal
        setTimeout(() => modal.classList.add('fade-in'), 10); // Add class to start fade-in animation
      });
    });

    // Close the modal if the user clicks outside of it
    window.addEventListener('click', function(event) {
      if (event.target == modal) {
        modal.classList.remove('fade-in'); // Start fade-out animation
        setTimeout(() => modal.style.display = "none", 500); // Delay hiding the modal to allow fade-out to complete
      }
    });
  });
</script>
