{% schema %}
{
  "name": "Ticker Text",
  "settings": [
    {
    "type": "range",
    "id": "text-size",
    "label": "Font Size",
    "min": 10,
    "max": 24,
    "unit": "px",
    "step": 1,
    "default": 16
  },
    {
    "type": "color",
    "id": "text-color",
    "label": "Text Color",
    "default": "#FFFFFF"
  },
    {
    "type": "color",
    "id": "background-color",
    "label": "Background Color",
    "default": "#000000"
  },

    {
    "type": "range",
    "id": "speed",
    "label": "Scroll Speed",
    "min": 0,
    "max": 150,
    "step": 10,
    "default": 50
  },
    {
    "type": "range",
    "id": "space",
    "label": "Spacing",
    "min": 0,
    "max": 20,
    "step": 1,
    "default": 5
  },
    {
    "type": "text",
    "id": "divider",
    "label": "Divider",
    "default": "â€¢"
  },
    {
    "type": "range",
    "id": "height",
    "label": "Height",
    "min": 1,
    "max": 8,
    "step": 1,
    "default": 3
  }
  ],"blocks": [
    {
    "type": "scroll-text",
    "name": "Text",
    "settings": [
    {
    "type": "text",
    "id": "text",
    "label": "Scrolling Text",
    "default": "Placeholder here"
    }
      ]
    }
  ],"presets": [
    {
      "name": "Ticker Text"
    }
  ]
}
{% endschema %}

<div class="ticker-wrapper">
  <div class="ticker_container">
    <div id="ticker_text">
      <!-- First span for the repeated text -->
      <span class="ticker_item">
        {%- for block in section.blocks -%}
          {{- block.settings.text -}}
          {% capture count %}{{ section.settings.space }}{% endcapture %}
          {% for num in (1..count) %}
            &nbsp;
          {% endfor -%}
          {{ section.settings.divider }}
          {% for num in (1..count) %}
            &nbsp;
          {% endfor -%}
        {%- endfor -%}
      </span>
      <!-- Second span identical to the first for the seamless loop -->
      <span class="ticker_item">
        {%- for block in section.blocks -%}
          {{- block.settings.text -}}
          {% capture count %}{{ section.settings.space }}{% endcapture %}
          {% for num in (1..count) %}
            &nbsp;
          {% endfor -%}
          {{ section.settings.divider }}
          {% for num in (1..count) %}
            &nbsp;
          {% endfor -%}
        {%- endfor -%}
      </span>
    </div>
  </div>
</div>

<script>
  // This Function repeats the News-Ticker-Text
    var repeatText = document.getElementById("ticker_text").textContent;
    document.getElementById("ticker_text").innerHTML = repeatText.repeat(2000);
</script>

{% style %}
  .ticker-wrapper {
    width: 100%;
    overflow: hidden;
    margin: 0;
  }

  .ticker_container {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: {{ section.settings.height }}rem;
    background: {{ section.settings.background-color }};
  }

  #ticker_text {
    display: flex; /* Changed to flex to have the spans side by side */
    font-size: {{ section.settings.text-size }}px;
    letter-spacing: 1px;
    color: {{ section.settings.text-color }};
    font-weight: 500;
    white-space: nowrap;
    animation: tickerMove 120s linear infinite;
  }

  @keyframes tickerMove {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%); /* Move left by half of the total width */
    }
  }
{% endstyle %}
